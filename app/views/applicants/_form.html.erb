            <%= simple_form_for @applicant  do |f| %>
                <%= f.input_field :user_id, as: :hidden,value: current_user.id %>
                        <div class="form-group form-float">
                            <div class="form-line">
                            <label class="form-label">First Name</label>
                            <%= f.input_field :first_name, class: "form-control" %>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <label class="form-label">Father Name</label>
                                <%= f.input_field :father_name, class: "form-control" %>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <label class="form-label">Grand Father Name</label>
                                <%= f.input_field :grand_father_name, class: "form-control" %>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <label class="form-label">Gender</label>
                                <%= f.input_field :gender, collection: ['Male', 'Female'], class: "form-control show-tick" %>
                            </div>
                        </div>
                        <div class="form-group form-float">
                        <div class="form-group">
                            <div class="form-line">
                                <label class="form-label">Date of Birth</label>
                                <%= f.input_field :date_of_birth, as: :string, class: "datepicker form-control" %>
                            </div>
                            </div>
                        </div>
                    <%= f.button :submit, 'Save and Continue' %>
                    <% end %>