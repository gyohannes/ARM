<%= simple_form_for @applicant do |f| %>
    <%= f.error_notification %>
    <%= f.input :academic_year_id, as: :hidden, input_html: {value: AcademicYear.current.try(:id)} %>
    <%= f.input :title, label: 'Title', collection: ['Dr', 'Mr', 'Ms'] %>
    <%= f.input :user_id, as: :hidden,input_html: { value: current_user.id } %>
    <%= f.input :first_name %>
    <%= f.input :father_name %>
    <%= f.input :grand_father_name %>
    <%= f.input :gender, collection: ['Male', 'Female'] %>
    <%= f.input :date_of_birth, as: :string, input_html: {class: "datepicker"} %>
    <%= f.input :place_of_birth %>
    <%= f.input :marital_status, collection: ['Single', 'Married', 'Divorced'] %>
      <legend>Current Address</legend>
      <%= f.association :region %>
      <%= f.input :city %>
      <%= f.input :pobox %>
      <%= f.input :phone %>
    <hr/>
    <%= f.button :submit, 'Save and Continue' %>
<% end %>