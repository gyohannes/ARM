            <%= form_tag program_choices_path do %>
                <%= hidden_field_tag 'applicant', @applicant.id %>
                <% @program_choices.each do |program_choice| %>
                  <%= simple_fields_for 'program_choices[]', program_choice do |pc| %>
                        <%= pc.input :id, as: :hidden %>
                        <%= pc.input :applicant_id, as: :hidden %>
                        <%= pc.input :choice_order, as: :hidden %>
                        <% choice  = pc.object.choice_order.ordinalize %>
                        <%= pc.input :program_id,collection: Program.all, label: "#{choice}" %>
                        <%= pc.full_error :program_id %>
                    <% end %>
                <% end %>
                <%= submit_tag 'Save and Continue' %>
            <% end %>