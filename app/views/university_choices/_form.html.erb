
            <%= form_tag university_choices_path do %>
                <%= hidden_field_tag 'applicant', @applicant.id %>
                <% @applicant.complete_program_choices.each do |program_choice| %>
                  <%= program_choice.choice_order.ordinalize %> - <%= program_choice.program.name %><br/><br/>
                  <% program_choice.university_choices.each do |university_choice| %>
                  <%= simple_fields_for 'university_choices[]', university_choice do |uc| %>
                            <%= uc.input :id, as: :hidden %>
                            <%= uc.input :program_choice_id, as: :hidden %>
                            <%= uc.input :choice_order, as: :hidden %>
                            <% choice_order = uc.object.choice_order.ordinalize %>
                            <%= uc.input :university_id, label: "#{choice_order}", collection: program_choice.program.universities, class: "form-control show-tick" %>
                        <% end %>
                    <% end %>
                    <% end %>
                    <%= submit_tag 'Save and Continue' %>
                    <% end %>