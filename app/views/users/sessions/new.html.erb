<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
<div class="row">
    <div class="col-lg-12">
    <div class="p-5">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'user'}) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, class: "form-control form-control-user", placeholder:"Email", required: true, autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control form-control-user", placeholder:"Password", required: true, autofocus: true %>
          </div>

          <div class="form-group">
            <div class="custom-control custom-checkbox small">
              <%= f.check_box :remember_me, name: "rememberme", id: "customCheck", class: "custom-control-input" %>
              <label class="custom-control-label" for="customCheck">Remember Me</label>
            </div>
          </div>
          <hr/>
          <center><%= f.submit "Login", class: "btn btn-primary" %></center>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>