<%= simple_form_for(@exam_hub) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :region %>
    <%= f.input :city %>
    <%= f.input :ceiling %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit Application" %>
  </div>
<% end %>
