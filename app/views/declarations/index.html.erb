<% if current_user.admin? %>
    <div class="header">
      <h2>
        Declarations
      </h2>
    </div>
    <div class="body table-responsive">
      <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @declarations.each do |declaration| %>
      <tr>
        <td><%= declaration.name %></td>
        <td>
          <%= link_to 'Edit', edit_declaration_path(declaration) %>
          <%= link_to 'Delete', declaration, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Declaration', new_declaration_path %>
    </div>
<% end %>