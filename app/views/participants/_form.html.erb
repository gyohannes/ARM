<%= simple_form_for(@participant, wrapper_mappings: { boolean: :horizontal_boolean }) do |f| %>
  <%= f.error_notification %>
    <%= f.association :event, as: :hidden %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.input :name, label: 'Name(title)' %>
      <%= f.association :region %>
      <%= f.association :organization_type %>
      <%= f.input :organization_name, label: 'Organization' %>
      <%= f.input :position %>
      <%= f.input :address %>
    </div>
    <div class="col-sm-6 left_form">
      <%= f.input :telephone_number %>
      <%= f.input :email %>
      <%= f.association :participant_type %>
      <%= f.input :stay_at %>
      <%= f.association :group %>
      <%= f.association :field_visit %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
<br/>
