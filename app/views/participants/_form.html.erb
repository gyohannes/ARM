<%= simple_form_for(@participant, wrapper_mappings: { boolean: :horizontal_boolean }) do |f| %>
  <%= f.error_notification %>
    <%= f.association :event, as: :hidden %>
  <div class="row">
    <div class="col-sm-6">
      <% if current_user %>
        <%= f.input :serial_number %>
      <% end %>
      <%= f.input :name, label: 'Name(title)' %>
      <%= f.association :region %>
      <%= f.association :organization_type %>
      <%= f.input :organization %>
      <%= f.input :position %>
      <%= f.association :participant_type %>
    </div>
    <div class="col-sm-6 left_form">
      <%= f.input :address, label: 'City' %>
      <%= f.input :telephone_number %>
      <%= f.input :email %>
      <%= f.input :email_confirmation, label: 'Confirm Email' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
<br/>
