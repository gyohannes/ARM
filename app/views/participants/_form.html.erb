<%= simple_form_for(@participant, wrapper_mappings: { boolean: :horizontal_boolean }) do |f| %>
  <%= f.error_notification %>
    <%= f.association :event, as: :hidden, input_html: { value: @current_event.try(:id) } %>
  <div class="form-inputs">
    <div class="row">
        <%= f.input :amharic_name, label: 'Amharic Name' %>
      <%= f.input :name, label: 'English Name' %>
        <%= f.input :photo, as: :file %>
      </div>
    </div>

  </div>
  <hr/>
  <div class="form-actions">
    <center><%= f.button :submit, 'Save', class: 'btn btn-primary'  %></center>
  </div>
<% end %>
<br/>
