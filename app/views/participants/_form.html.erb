<%= simple_form_for(@participant, wrapper_mappings: { boolean: :horizontal_boolean }) do |f| %>
  <%= f.error_notification %>
    <%= f.association :event, as: :hidden, input_html: { value: @current_event.try(:id) } %>
  <div class="form-inputs">
    <div class="row">
        <%= f.input :name, label: 'Full Name' %>
        <%= f.association :organization_type, label: 'Organization' %>
        <%= f.input :telephone_number %>
        <%= f.input :photo, as: :file %>
      </div>
    </div>

  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
