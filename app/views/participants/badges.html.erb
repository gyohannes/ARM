<style>
  .id_card{
    # background: rgb(2,176,231);
    # background: -webkit-linear-gradient(top left, rgba(2,176,231,1) 0%, rgba(8,39,141,1) 0%, rgba(2,0,36,1) 0%, rgba(7,40,142,1) 0%, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 12%, rgba(5,80,165,1) 16%, rgba(3,130,196,1) 35%, rgba(3,145,211,1) 46%, rgba(5,92,172,1) 59%, rgba(1,169,221,1) 65%, rgba(4,98,176,1) 100%, rgba(1,186,235,1) 100%);
    color: white;
    width: 78mm;
    height: 115mm;
    font-family: 'Palatino', serif;
    # border: 2px solid purple;
    border-radius: 6px;
    float: left;
    padding: 2px;
    page-break-inside: avoid;
    margin-right: 5px;
    margin-bottom: 5px;
  }

  .header{
    height: 50mm;
    overflow: hidden;
    vertical-align: middle;
    text-align: center;
  }

  .title{
    text-align: center;
    margin-bottom: 5px;
    font-size: 22px;
    font-weight: bold;
  }

  .moto{
    color: black;
    padding-top: 25%;
    padding-left: 10px;
    padding-right: 10px;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
  }

  .date{
    float: right;
    font-size: 10px;
    font-style: italic;
    border-bottom: 1px solid silver;
    margin-bottom: 10px;
  }

  .body_and_footer{
    color: black;
    background-image: url('<%= image_path Rails.root.join(ActiveStorage::Blob.service.send(:path_for, Event.first.logo.key)) %>');
    background-position: center;
    background-repeat: no-repeat;
    background-size: 100%; 
    float: left;
    width: 100%;
    height: 65mm;
    overflow: hidden;
    padding-top: 10px;
  }
  
  .id_card_body{
    text-align: center;
    font-weight: bold;
    list-style: none;
    padding: 1px;
    height: 43mm;
    overflow: hidden;
    width: 100%;
  }

  .name{
    width: 65%;
    margin-bottom: 10px;
    font-size: 24px;
    display: inline-block;
    vertical-align: middle;
  }

  footer{
    padding-top: 0px;
    height: 7mm;
    align-self: flex-end;
    width: 100%;
  }
  .circle-text {
    float: right;
    border-bottom: 1px solid silver;
    font-size: 24px;
  }

  .participant_type{
    width: 80%;
    float: left;
    text-align: center;
    font-size: 24px;
    font-weight: bold;
  }
}
</style>
<% 4.times do %>
    <div class="id_card">
    <div class='moto'>
      <%= @current_event.amharic_motto %><br/><br/><br/>
      <%= @current_event.motto %><br/>
    </div>
    </div>
<% end %>