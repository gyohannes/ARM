<div class="header">
  <h2>
    Participants
  </h2>
</div>
<div class="body table-responsive">
  <%= form_tag badges_participants_path(format: :pdf), method: :get do %>
    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
    <thead>
      <tr>
        <th><%= check_box(nil, "check_all", {class: 'check_all',class: "filled-in chk-col-pink"}) %>
          <label for="check_all">All</label>
        </th>
        <th>Name</th>
        <th>Organization name</th>
        <th>Organization type</th>
        <th>Directorate</th>
        <th>Responsibility</th>
        <th>Place of work</th>
        <th>Telephone number</th>
        <th>Email</th>
        <th>Participant type</th>
        <th>Stay at</th>
        <th>Group</th>
        <th>Field visit</th>
        <th>Checked in</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each do |participant| %>
        <tr>
          <td>
            <%= check_box(nil, "participants", {multiple: true,id: participant.id,class: "filled-in chk-col-pink"}, participant.id) %>
            <label for="<%= participant.id %>"></label>
          </td>
          <td><%= participant.name %></td>
          <td><%= participant.organization_name %></td>
          <td><%= participant.organization_type %></td>
          <td><%= participant.directorate %></td>
          <td><%= participant.responsibility %></td>
          <td><%= participant.place_of_work %></td>
          <td><%= participant.telephone_number %></td>
          <td><%= participant.email %></td>
          <td><%= participant.participant_type %></td>
          <td><%= participant.stay_at %></td>
          <td><%= participant.group %></td>
          <td><%= participant.field_visit %></td>
          <td><%= participant.checkedin_status %></td>
          <td>
            <%= link_to 'Details', participant %>
            <%= link_to 'Edit', edit_participant_path(participant) %>
          <%= link_to 'Delete', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
      <center><%= submit_tag 'Generate Badges',data: { disable_with: false } %></center>
  <% end %>
</hr>
<%= link_to 'New Participant', new_participant_path, class: 'btn btn-primary' %>
  <div class="body">
    <%= form_tag import_participants_participants_path,:multipart=>true do %>
        <labe>CSV File</labe>
        <%= file_field_tag(:participants_csv_file) %> <%= submit_tag 'Import',class: 'btn' %>
    <% end %>
  </div>
</div>